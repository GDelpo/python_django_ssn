# Django configuration
SECRET_KEY=change_this_to_a_secure_random_string
DEBUG=False
ALLOWED_HOSTS=your_domain.com,www.your_domain.com

# SSL configuration
SSL_DOMAIN=example.com
SSL_IP=127.0.0.1
SSL_ORGANIZATION=Example Organization
SSL_COUNTRY=AR
SSL_EMAIL=admin@example.com

# Django Admin configuration
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=secure_password_here

# Django in Docker
DJANGO_SETTINGS_MODULE=ssn.settings
PYTHONUNBUFFERED=1

# Nginx external port (must be free on the host)
NGINX_PORT=80

# SSN API configuration
SSN_API_USERNAME=your_ssn_username
SSN_API_PASSWORD=your_ssn_password
SSN_API_CIA=your_company_code
SSN_API_BASE_URL=https://produccion.ssn.gob.ar/api
SSN_API_MAX_RETRIES=3
SSN_API_RETRY_DELAY=5
PREVIEW_MAX_AGE_MINUTES=5

# Soporte
SUPPORT_EMAIL=soporte@your_domain.com

# PostgreSQL configuration
POSTGRES_DB=ssn_production
POSTGRES_USER=ssn_db_user
POSTGRES_PASSWORD=secure_db_password
POSTGRES_HOST=db
POSTGRES_PORT=5432